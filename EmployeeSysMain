import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        EmployeeSys employeeSys = new EmployeeSys();
        Scanner sc = new Scanner(System.in);
        
        boolean exit = false;
        
        while (!exit) {
            System.out.println("\nEmployee System Menu");
            System.out.println("1. Add Employee");
            System.out.println("2. Remove Employee");
            System.out.println("3. Search Employee");
            System.out.println("4. Display Employees");
            System.out.println("5. Calculate Employee Holidays");
            System.out.println("6. Calculate Employee Education Average");
            System.out.println("7. Calculate Employee Gender Average");
            System.out.println("8. Add Manager Salary");
            System.out.println("9. Exit");
            System.out.print("Enter your choice: ");
            int choice = sc.nextInt();
            
            switch (choice) {
                case 1:
                    employeeSys.addEmployee();
                    break;
                case 2:
                    System.out.print("Enter the name of the employee to remove: ");
                    String removeName = sc.next();
                    boolean removed = employeeSys.removeEmployee(removeName);
                    if (removed) {
                        System.out.println("Employee removed successfully.");
                    } else {
                        System.out.println("Employee not found.");
                    }
                    break;
                case 3:
                    System.out.print("Enter the name of the employee to search: ");
                    String searchName = sc.next();
                    Employee foundEmployee = employeeSys.searchEmployee(searchName);
                    if (foundEmployee != null) {
                        System.out.println("Employee found:");
                        System.out.println(foundEmployee.toString());
                    } else {
                        System.out.println("Employee not found.");
                    }
                    break;
                case 4:
                    String display = employeeSys.display();
                    System.out.println("Employee List:\n" + display);
                    break;
                case 5:
                    employeeSys.calculateEmployeeHolidays();
                    break;
                case 6:
                    employeeSys.calculateEmployeeEducationAverage();
                    break;
                case 7:
                    employeeSys.calculateEmployeeGenderAverage();
                    break;
                case 8:
                    employeeSys.addManagerSalary();
                    System.out.println("Manager salaries updated.");
                    break;
                case 9:
                    exit = true;
                    System.out.println("Exiting...");
                    break;
                default:
                    System.out.println("Invalid choice. Please try again.");
            }
        }
        
        sc.close();
    }
}
